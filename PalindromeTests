

import static org.junit.Assert.*;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;

/**
 * The test class GreatestTestSuite.
 *
 * @author  (your name)
 * @version (a version number or a date)
 */
public class PalindromeTests
{
    /**
     * Default constructor for test class GreatestTestSuite
     */
    public PalindromeTests()
    {
    }

    /**
     * Sets up the test fixture.
     *
     * Called before every test case method.
     */
    @Before
    public void setUp()
    {
    }

    /**
     * Tears down the test fixture.
     *
     * Called after every test case method.
     */
    @After
    public void tearDown()
    {
    }

    /**
     * This test verifies that the greatest value in an array of 5 integers
     * is found.
     */
    @Test
    public void positiveValues()
    {
        assertEquals(Palindrome.isPalindrome( new int[] {1,2,3,2,1}), true);
        assertEquals(Palindrome.isPalindrome( new int[] {5,4,3,2,1}), false);
        assertEquals(Palindrome.isPalindrome( new int[] {2,3,5,1,4}), false);
        assertEquals(Palindrome.isPalindrome( new int[] {2,2,2,2,2}), true);
    }
}

